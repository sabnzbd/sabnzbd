<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.0//EN">
<html>
<head>
	
	<title>SABnzbd+ $version - Queued: $mbleft MB</title>
	<link rel="shortcut icon" type="image/ico" href="../../static/images/plush-default/sabnzbdplus.ico"/>
	
	<script type="text/javascript" src="../../static/javascripts/jquery.js?$version"></script>
	<script type="text/javascript" src="../../static/javascripts/jquery.corner.js?$version"></script>
	
	<link rel="stylesheet" type="text/css" href="../../static/stylesheets/plush-default.css?$version"/>
	<!--#if $color_scheme and $color_scheme != "plush-default.css" and $color_scheme != "plush_default.css" and $color_scheme != "default.css" and $color_scheme != "modern.css" and $color_scheme != "Modern.css"#-->
	<link rel="stylesheet" type="text/css" href="../../static/stylesheets/colorschemes/$color_scheme?$version"/>
	<!--#end if#-->
	
	<!--#raw#-->
	<script language="javascript">
		$(document).ready(function(){
			$('.config_menu').corner("round tl bl");
			$('#config_container').corner("round");
			$('#help').corner("round");
		});
	</script>
	<!--#end raw#-->
	
	<style>
	<!--
		body {background: #ddd;}
	-->
	</style>
	
</head>
<body>
	
	<div id="config_go_back"><div><a href="../../">go&nbsp;back</a></div></div>
	
	<div id="config_nav">
		<ul>
			<li><a class="config_menu" id="config_nav_connections" href="../../connections">Connections</a></li>
			<li><a class="config_menu" id="config_nav_general" href="../general">General</a></li>
			<li><a class="config_menu" id="config_nav_directories" href="../directories">Folders</a></li>
			<li><a class="config_menu" id="config_nav_switches" href="../switches">Switches</a></li>
			<li><a class="config_menu" id="config_nav_server" href="../server">Servers</a></li>
			<li><a class="config_menu nav_active" id="config_nav_categories" href="../categories">Categories</a></li>
			<li><a class="config_menu" id="config_nav_scheduling" href="../scheduling">Scheduling</a></li>
			<li><a class="config_menu" id="config_nav_rss" href="../rss">RSS</a></li>
			<li><a class="config_menu" id="config_nav_email" href="../email">Email</a></li>
			<li><a class="config_menu" id="config_nav_newzbin" href="../newzbin">Newzbin</a></li>
		</ul>
	</div>
	
	<div id="config_container" class="config_margin">
		<div id="config_content">
			
<!--************************************
			PAGE CONTENT IS BELOW
	************************************ -->
			
			<div align="center"><small>
			Defines post-processing and storage.&nbsp;&nbsp;|&nbsp;&nbsp;
			<!--#if $varExists('newzbinDetails')#-->
			The Newzbin column will map listed Newzbin categories to your own.&nbsp;&nbsp;|&nbsp;&nbsp;
			<!--#end if#-->
			Relative folders are based on:</small>
			<font color=blue>$defdir</font><br/>
			<!--#if not $have_cats#-->
			<small>Click <a href="init_newzbin"><b>HERE</b></a> to setup Newzbin categories.</small><br/>
			<!--#end if#-->
			</div>
			
			<table id="catTable">
				<tr>
					<th>Category</th>
					<th>&nbsp;Mode&nbsp;</th>
					<!--#if $script_list#-->
					<th>Script</th>
					<!--#end if#-->
					<th>Folder</th>
					<th><!--#if $varExists('newzbinDetails') then "NewzBin/Groups" else "Groups"#--></th>
					<th></th>
				</tr>
				
				<!--#set $odd = False#-->
				<!--#for $slot in $slotinfo#-->
				<!--#set $odd = not $odd#-->
				<tr class="<!--#if $odd then "odd" else "even"#-->">
					
					
					<td>
						<form action="save" method="get">
						<input type="hidden" value="$slot.name" name="name"/>
						<input type="text" name="newname" value="$slot.name"/>
					</td>
					
					<td>
						<select name="pp">
							<option value=""  <!--#if $slot.pp == ""  then "selected" else ""#-->>Default</option>
							<option value="0" <!--#if $slot.pp == "0" then "selected" else ""#-->>Download</option>
							<option value="1" <!--#if $slot.pp == "1" then "selected" else ""#-->>+Repair</option>
							<option value="2" <!--#if $slot.pp == "2" then "selected" else ""#-->>+Unpack</option>
							<option value="3" <!--#if $slot.pp == "3" then "selected" else ""#-->>+Delete</option>
						</select>
					</td>
					
					<!--#if $script_list#-->
					<td>
						<select name="script">
						<!--#for $sc in $script_list#-->
							<option value="$sc" <!--#if $slot.script.lower() == $sc.lower() then "selected" else ""#-->>$sc</option>
						<!--#end for#-->
						</select>
					</td>
					<!--#end if#-->
					
					<td><input type="text" size=35 name="dir" value="$slot.dir"/></td>
					
					<td><input type="text" size=35 name="newzbin" value="$slot.newzbin"/></td>
					
					<td>
						
						<input type="submit" value="Save"/>
					
						</form>
					
						<!--#if $slot.name#-->
						<form action="delete" method="get" style="display:inline">
							<input type="hidden" value="$slot.name" name="name"/>
							<input type="submit" value="X"/>
						</form>
						<!--#end if#-->
					</td>
					
				</tr>
				<!--#end for#-->
				
			</table>
			
<!--************************************
			PAGE CONTENT IS ABOVE
	************************************ -->
			
		</div>
	</div>
	
	<div class="left_links config_margin">
		<a id="help" target="_blank" href="$helpuri/configure-categories">Categories Help</a>
	</div>
	
</body>
</html>
