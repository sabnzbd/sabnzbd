                    <option value="-1" <!--#if $slot.priority == "Low" then "selected" else ""#-->>Low</option>
                </select></form>
            <!--#end if#-->
            </td>
        <!--#if $script_list#-->            
		<td>
            
                <form>
                <select onchange="javascript:changequeuedetails('queue/change_script?nzo_id=$slot.nzo_id&script='+this.options[this.selectedIndex].value);">
                <!--#for $sc in $script_list#-->
                    <option value="$sc" <!--#if $slot.script.lower() == $sc.lower() then "selected" else ""#-->>$sc</option>
                <!--#end for#-->
                </select>
                </form>
		</td>
            <!--#end if#-->
            
            <!--#if $cat_list#-->
            <td><form>
            <select onchange="javascript:changequeuedetails('queue/change_cat?nzo_id=$slot.nzo_id&cat='+this.options[this.selectedIndex].value);">
