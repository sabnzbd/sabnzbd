    <!--#if $sc.lower() == $pre_script.lower()#-->
      <option value="$sc" selected>$Tspec($sc)</option>
    <!--#else#-->
      <option value="$sc">$Tspec($sc)</option>
    <!--#end if#-->
  <!--#end for#-->
  </select>
