    <option value="v23" <!--#if $ssl_type == "v23" then 'selected' else ''#--> >V23</option>
    <option value="v2"  <!--#if $ssl_type == "v2"  then 'selected' else ''#--> >V2</option>
    <option value="v3"  <!--#if $ssl_type == "v3"  then 'selected' else ''#--> >V3</option>
  </select>
