    var typewatch = (function(){
        var timer = 0;
        return function(callback, ms){
            clearTimeout (timer);
            timer = setTimeout(callback, ms);
            }
    })();

  function tvSet(val) {
      \$('#tvfoldername').val(val);
      new_previewtv();
  }

  function movieSet(val, val2) {
      \$('#moviefoldername').val(val);
